<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>hu.icellmobilsoft.dookug.testsuite</groupId>
        <artifactId>dookug-ts-document</artifactId>
        <version>1.1.0</version>
    </parent>

    <artifactId>dookug-ts-document-service</artifactId>

    <dependencies>
        <dependency>
            <groupId>hu.icellmobilsoft.dookug.testsuite</groupId>
            <artifactId>dookug-ts-common-rest</artifactId>
        </dependency>
        <dependency>
            <groupId>hu.icellmobilsoft.dookug.testsuite</groupId>
            <artifactId>dookug-ts-common-resources</artifactId>
        </dependency>
        <dependency>
            <groupId>jakarta.servlet</groupId>
            <artifactId>jakarta.servlet-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-collections4</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.pdfbox</groupId>
            <artifactId>pdfbox</artifactId>
            <version>2.0.32</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>../../../etc/config/testsuite</directory>
                <includes>
                    <include>META-INF/roaster-*.yml</include>
                </includes>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>
</project>
